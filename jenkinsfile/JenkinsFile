pipeline {
    agent any

    tools {
        maven "M3"
    }

    stages {
        stage('Test') {
            steps {
            git branch: 'main', url: 'https://github.com/luisaferco/web-automation-pom.git'

            // To run maven
            bat "mvn clean verify"
            }

            post {
                always{
                   allure([
                   includeProperties: false,
                   jdk: '',
                   properties: [],
                   reportBuildPolicy: 'ALWAYS',
                   results: [[path: '*/allure-results']]
                   ])
                } 
            }
        }
    }

}